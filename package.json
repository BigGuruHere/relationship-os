{
	"name": "relationship-os",
	"private": true,
	"version": "0.0.1",
	"type": "module",
		"scripts": {
		  // PURPOSE: local dev server
		  "dev": "vite dev",
	  
		  // PURPOSE: build app and generate Prisma client
		  "build": "prisma generate && vite build",
	  
		  // PURPOSE: local preview of built app
		  "preview": "vite preview",
	  
		  // PURPOSE: plain start without migrations - usable in dev only
		  "start": "node build/index.js",
	  
		  // PURPOSE: prod start that applies committed migrations before boot
		  // SECURITY: uses whatever DATABASE_URL the environment provides
		  "start:with-migrations": "prisma migrate deploy && node build/index.js",
	  
		  // PURPOSE: deploy alias - safe to keep if you use it elsewhere
		  "migrate": "prisma migrate deploy",
	  
		  "prepare": "svelte-kit sync || echo ''",
		  "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		  "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		  "format": "prettier --write .",
		  "lint": "prettier --check . && eslint .",
	  
		  // PURPOSE: guarded dev migrations so you do not hit prod by mistake
		  "migrate:dev": "node scripts/safe-migrate-dev.js",
	  
		  // PURPOSE: apply committed migrations in prod
		  "migrate:deploy": "prisma migrate deploy",
	  
		  // PURPOSE: regenerate Prisma client after install
		  "generate": "prisma generate",
		  "postinstall": "prisma generate"
		},
	
	  
	"engines": {
		"node": ">=22.13.1 <23"
	},
	"engineStrict": false,
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prisma": "^6.16.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@prisma/client": "^6.16.0",
		"argon2": "^0.44.0",
		"jose": "^6.1.0",
		"openai": "^6.2.0",
		"qrcode": "^1.5.4",
		"zod": "^4.1.5"
	}
}
